<div class="jumbotron"> 
  <div class="container">  
    <div id="header" text="centered" class="col-md-12">
      <h1>EAT DA BURGER!</h1>
    </div>
  </div><!--end container-->
</div><!--end jumbotron-->

<div class="container">
  <div class="row"> <!-- beginning of new burgers added list -->
    <div id="menu" class="col-sm-4">
      <ul>
        {{#each burgers}}
          {{#unless this.devoured}}
            <li>
              {{this.burger_name}}

              <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button type="submit">DEVOUR IT!</button>
              </form>
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>
  </div>
  
  <div class="row"><!-- add a new burger -->
    <div id="addBurger" class="col-sm-4"> 
      <h3>Add a Burger</h3>
        <form class="create-update-form" action="burgers/create" method="POST">

          <div class="form-group">
            <label for="bu">Burger Name:</label>
            <input type="text" id="bu" name="burger_name">
          </div>
          <button type="submit">Add Burger</button>
        </form>
    </div>
  </div>
  
  <div class="row"> <!-- beginning of devoured list -->
    <div id="devoured" class="col-sm-4">
      <ul>
        {{#each burgers}}
          {{#if this.devoured}}
            <li>
              {{this.burger_name}}

              <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="false">
              </form>
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div><!-- end of container -->





